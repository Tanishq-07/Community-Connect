<% layout('layouts/boilerplate') %>

<div class="container col-md-4">
    <h1 class="mb-4">Create New Community</h1>

    <form action="/community/new" method="post" class="row g-3 needs-validation" novalidate enctype="multipart/form-data">


        <div class="row-md-4 mb-3">
            <label for="name" class="form-label">Community Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
            <div class="valid-feedback">
              Looks good!
            </div>
        </div>
        
        <label for="communityProfile">Add profile image for community : </label>
        <input type="file" name="communityProfile" id="communityProfile">

        <div class="row-md-4 mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" id="description" class="form-control" required></textarea>
            <div class="valid-feedback">
              Looks good!
            </div>
        </div>

        <button class="btn btn-primary mt-4" type="submit">Create Community</button>

    </form>
</div>


